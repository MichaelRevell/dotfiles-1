export PATH=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home/bin:/maven3/bin:/opt/local/bin:opt/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/X11/bin:$PATH
