-l=20 # max line width is 79 cols
-i=4 # indent level is 4 cols
-ci=4 # continuation indent is 4 cols

-se # errors to stderr
-vt=2 # maximal vertical tightness
-cti=0 # no extra indentation for closing brackets
-pt=0 # medium parenthesis tightness
-bt=0 # medium brace tightness
-sbt=0 # medium square bracket tightness
-bbt=0 # medium block brace tightness
-nsfs # no space before semicolons
-nolq # don't outdent long quoted strings

# break before all operators
-wbb="% + - * / x != == >= <= =~ < > | & **= += *= &= <<= &&= -= /= |= >>= ||= .= %= ^= x="

# extras/overrides/deviations from PBP (perl best preactices)
--maximum-line-length=79 # be less generous
--warning-output # Show warnings
--maximum-consecutive-blank-lines=2 # default is 1
--nohanging-side-comments # troublesome for commented out code

# block comments may only be indented if they have some space characters before the pound
-isbc

# continuation indent is 4 cols
-ci=4

# we use version control, so just rewrite the file
-b

# uncomment and tighten-up containers (parens/brackets/etc) ... if you dare !!!
#-pt=2 # High parenthesis tightness
#-bt=2 # High brace tightness
#-sbt=2 # High square bracket tightness
